<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_dragger_helper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.v4demo.viewdraggerhelper.ViewDraggerHelperActivity">

    <com.yang.v4demo.viewdraggerhelper.DragFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView
                android:text="MenuView"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="200dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="MainView"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="200dp"
                android:layout_height="100dp"/>
        </com.yang.v4demo.viewdraggerhelper.DragFrameLayout>
</RelativeLayout>
