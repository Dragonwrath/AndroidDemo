<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <style name="Toolbar_Expand_Appearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Toolbar_Collapse_Appearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="channel_list_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/lightBlue</item>
        <item name="android:onClick">channelSelect</item>
    </style>

</resources>
