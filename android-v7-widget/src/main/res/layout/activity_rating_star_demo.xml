<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rating_star_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joke.v7demo.ratingStarDemo.RatingStarDemoActivity">


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="10"
        android:secondaryProgress="20"/>

    <SeekBar
        android:max="100"
        android:thumbTint="@color/colorPrimary"
        android:progress="10"
        android:progressTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:isIndicator="false"
        android:rating="3"

        />

    <com.joke.v7demo.ratingStarDemo.XLHRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:canEdit="true"
        app:differentSize="true"
        app:dividerWidth="5dp"
        app:countSelected="2"
        app:starCount="5"
        app:stateResId="@drawable/comment_ratingbar_selector"
        app:widthAndHeight="50dp"/>
</LinearLayout>
