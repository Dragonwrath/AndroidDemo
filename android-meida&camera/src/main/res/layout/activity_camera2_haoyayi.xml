<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joke.media_camera.camera.CameraActivity">

    <Button
        android:id="@+id/camera_scalePic"
        android:text="Scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/camera_cancel"
        android:text="Cancel"
        android:layout_toRightOf="@id/camera_scalePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/camera_takepicture"
        android:text="Capture"
        android:layout_toRightOf="@id/camera_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/camera_send"
        android:text="Send"
        android:layout_toRightOf="@id/camera_takepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/camera_tip"
        android:layout_below="@id/camera_scalePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:text="hint"/>
    <ImageView
        android:id="@+id/preview_img"
        android:layout_below="@id/camera_scalePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>
    <TextureView
        android:id="@+id/autoFitTextureView"
        android:layout_below="@id/preview_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
