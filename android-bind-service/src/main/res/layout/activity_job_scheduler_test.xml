<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_scheduler_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joke.bindservicedemo.jobscheduler.JobSchedulerTestActivity">

    <Button
        android:onClick="cancelAllJobs"
        android:text="取消所有任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="startSingleTask"
        android:text="开启一次任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button

        android:onClick="startRepeatTask"
        android:text="开启重复任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
